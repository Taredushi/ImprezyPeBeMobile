<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventsPbMobile.Pages.EventDetails">
<ScrollView>
    <StackLayout Orientation="Vertical" Padding="0,0,0,0">
      
        <Image Source="{Binding Baner}" />
        <StackLayout BackgroundColor="#1E5327" Margin="0,-6,-0,0">
            <Label x:Name="TitleLabel" FontSize="Large" TextColor="White" HorizontalTextAlignment="Center" />
        </StackLayout>
        <Button Text="Pokaż mapę" Clicked="MapButton_OnClicked" />
        <!-- <Button Text="Powiadomienie o wydarzeniu" Clicked="Notification_Clicked" IsVisible="False" />-->
        <Label Text="{Binding Text}" FontSize="20" />
        <ListView x:Name="EventPlaces" ItemSelected="EventInDepartamentSelected" Margin="0,0,0,-50">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Margin="5,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label Text="{Binding Place.ShortName}" Grid.Row="0" Grid.Column="0"
                                   FontAttributes="Bold" FontSize="20" />
                            <Label Text="{Binding Title}" Grid.Row="0" Grid.Column="1" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ScrollView>
</ContentPage>