<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventsPbMobile.Pages.Help"
             Title="Pomoc">
    <ContentPage>
        <StackLayout BackgroundColor="#2d7a3a">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition  Height="30*"/>
                    <RowDefinition  Height="70*"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row = "0" Padding="14,8,14,8" HorizontalOptions="Center" VerticalOptions="Center" >
                    <Label  Text="Wyszukuj aktywności po dacie, miejscu, tytule lub opisie" FontSize="30" TextColor="White" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <Image Grid.Row = "1" Source="nowe1.png" HorizontalOptions="Fill" VerticalOptions="Center" />
            </Grid>
        </StackLayout>
    </ContentPage>
    <ContentPage>
        <StackLayout>
        </StackLayout>
    </ContentPage>
    <ContentPage>
        <StackLayout>

            <Label Text="Blue" HorizontalTextAlignment="Center" HorizontalOptions="Fill" Margin="5"  />
            <BoxView Color="Blue" VerticalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage>
</CarouselPage>