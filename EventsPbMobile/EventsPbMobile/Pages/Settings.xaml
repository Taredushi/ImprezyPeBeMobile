<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventsPbMobile.Pages.Settings"
             Title="Ustawienia">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand">

          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"></ColumnDefinition>
              <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label FontSize="20" Text="Powiadomienia" Grid.Row="0" Grid.Column="0"  Margin="10,10,0,0" />
            <Switch Toggled="NotificationSwitch" Grid.Row="0" Grid.Column="1" WidthRequest="20"/>
          </Grid>
          <ListView x:Name="NotificationTimesListView" IsVisible="False" ItemSelected="DisableSelectionItem" HeightRequest="60">
            <ListView.ItemTemplate>
              <DataTemplate>
                <ViewCell>
                  <Grid>
                    <Grid.RowDefinitions>
                      <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*"></ColumnDefinition>
                      <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label FontSize="18" Text="{Binding NotifyTime}" Grid.Row="0" Grid.Column="0"></Label>
                    <Switch Toggled="SelectionChange" IsToggled="{Binding Selected}" Grid.Row="0" Grid.Column="1"/>
                  </Grid>
                </ViewCell>
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>
            <!--<BoxView HeightRequest="1" WidthRequest="1" BackgroundColor="Silver" />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>