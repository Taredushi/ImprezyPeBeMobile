<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventsPbMobile.Pages.Search" BackgroundColor="#2d7a3a">
    <ScrollView>
        <StackLayout Margin="7,0,7,0">
            <StackLayout>
                <Entry
                    Placeholder="Wyszukaj wydarzenie"
                    Text="{Binding Path=SearchText}"
                    TextChanged="OnTextChanged" PlaceholderColor="DarkGray" TextColor="White" />
            </StackLayout>
            <StackLayout>
                <ListView x:Name="SearchedEvents" ItemSelected="OnTappedSearchedEvent" HasUnevenRows="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell Height="100">
                                <Grid Margin="0,5,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="{Binding Event.Baner}" WidthRequest="40" HeightRequest="40"
                                           Grid.Column="0" />
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Text="{Binding Event.Title}" FontSize="20" Grid.Row="0"
                                               TextColor="White" VerticalTextAlignment="Center" />
                                        <Label Text="{Binding Event.StringDate}" FontSize="16" Grid.Row="1"
                                               TextColor="White" VerticalTextAlignment="Center" />
                                    </Grid>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>