<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventsPbMobile.Pages.Search" BackgroundColor="#2d7a3a">
    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Entry
                    Placeholder="Wyszukaj wydarzenie"
                    Text="{Binding Path=SearchText}"
                    TextChanged="OnTextChanged" PlaceholderColor="White" TextColor="White" />
            </StackLayout>
            <StackLayout>
                <ListView x:Name="SearchedEvents" ItemSelected="OnTappedSearchedEvent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell Height="100">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding Event.Title}" Grid.Row="0" Grid.Column="0" TextColor="White" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>